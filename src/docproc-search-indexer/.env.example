# Azure Cosmos DB Configuration
AZURE_COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
AZURE_COSMOS_DB_DATABASE_NAME=email-processing
AZURE_COSMOS_DB_EVENTS_CONTAINER_NAME=events
AZURE_COSMOS_DB_DOCUMENTS_CONTAINER_NAME=documents

# Azure Document Intelligence Configuration
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-docintel-account.cognitiveservices.azure.com/

# Azure Storage Configuration
AZURE_STORAGE_ACCOUNT_NAME=yourstorageaccount

# Azure AI Search Configuration
AZURE_SEARCH_SERVICE_NAME=your-search-service-name
AZURE_SEARCH_INDEX_NAME=documents-index

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-openai-instance.openai.azure.com
AZURE_OPENAI_DEPLOYMENT_NAME=text-embedding-3-large
AZURE_OPENAI_API_VERSION=2024-06-01
AZURE_OPENAI_EMBEDDING_DIMENSIONS=3072
AZURE_OPENAI_CHUNK_SIZE=2000
AZURE_OPENAI_CHUNK_OVERLAP=200

# Azure Table Storage Configuration for Continuation Tokens
AZURE_TABLE_STORAGE_ENABLED=true
AZURE_TABLE_STORAGE_TABLE_NAME=continuationtokens

# Application Configuration
LOG_LEVEL=INFO

# Azure Authentication (uses DefaultAzureCredential)
# Ensure you are logged in with 'az login' for local development
